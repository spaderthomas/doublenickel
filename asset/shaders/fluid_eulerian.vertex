#include "common.glsl"
#include "fluid_eulerian.glsl"

layout (location = 0) in vec3 position;
layout (location = 1) in vec4 color;
layout (location = 2) in vec2 uv;

out vec4 f_color;
out vec2 f_uv;

uniform mat4 projection;
uniform mat4 view;

void main() {
	gl_Position = projection * view * vec4(position.xyz, 1.0);
	f_color = color;
	f_uv = uv;
}
